<section class="width-90vw">
  <!-- this is the section for courses -->
  <div>
    <div class="w3-margin-bottom">
      <button
        class="w3-button w3-green w3-hover-light-blue w3-round-large"
        id="btnGenerateQR"
      >
        Generate QR Code&nbsp;<i class="fa-solid fa-qrcode"></i>
      </button>
    </div>
    <div class="w3-responsive">
      <% if(typeof alert !== "undefined"){ %>
      <div class="w3-container w3-orange fullWidth w3-padding-16">
        <span><%= alert %></span>
      </div>
      <% } %>
      <table class="w3-table-all w3-striped" id="singleSessionRecord">
        <thead>
          <tr class="w3-light-grey">
            <th class="width-5">No.</th>
            <th>First name / Last name</th>
            <th>Email</th>
            <th>Attendance</th>
            <th>Remarks</th>
          </tr>
        </thead>
        <tbody>
          <%if(typeof session !== "undefined"){%> <%for(let element of
          session.students){%>
          <tr>
            <td>
              <%=session.students.indexOf(element)+1%>
              <input id="" hidden value="<%=element.student._id%>" />
            </td>
            <td>
              <%=element.student.firstName%>&nbsp;<%=element.student.lastName%>
            </td>
            <td><%=element.student.accountLogin.email%></td>
            <td>
              <div class="container-row-flex-start">
                <%if(element.isPresent.toLowerCase() === "present"){%>
                <div class="container-row-flex-start">
                  <input
                    value="present"
                    type="radio"
                    name="row<%=session.students.indexOf(element)+1%>"
                    id=""
                    class="attendanceRadio"
                    checked
                  />
                  <label for="" class="text-style-bold">P</label>
                </div>
                <div class="margin-left-2 container-row-flex-start">
                  <input
                    type="radio"
                    name="row<%=session.students.indexOf(element)+1%>"
                    id=""
                    class="attendanceRadio"
                    value="absent"
                  />
                  <label for="" class="text-style-bold">A</label>
                </div>
                <div class="margin-left-2 container-row-flex-start">
                  <input
                    type="radio"
                    name="row<%=session.students.indexOf(element)+1%>"
                    id=""
                    class="attendanceRadio"
                    value="late"
                  />
                  <label for="" class="text-style-bold">L</label>
                </div>
                <%}else if(element.isPresent.toLowerCase() === "late"){%>
                <div class="container-row-flex-start">
                  <input
                    type="radio"
                    name="row<%=session.students.indexOf(element)+1%>"
                    id=""
                    class="attendanceRadio"
                    value="present"
                  />
                  <label for="" class="text-style-bold">P</label>
                </div>
                <div class="margin-left-2 container-row-flex-start">
                  <input
                    type="radio"
                    name="row<%=session.students.indexOf(element)+1%>"
                    id=""
                    class="attendanceRadio"
                    value="absent"
                  />
                  <label for="" class="text-style-bold">A</label>
                </div>
                <div class="margin-left-2 container-row-flex-start">
                  <input
                    type="radio"
                    name="row<%=session.students.indexOf(element)+1%>"
                    id=""
                    class="attendanceRadio"
                    value="late"
                    checked
                  />
                  <label for="" class="text-style-bold">L</label>
                </div>
                <%}else{%>
                <div class="container-row-flex-start">
                  <input
                    type="radio"
                    name="row<%=session.students.indexOf(element)+1%>"
                    id=""
                    class="attendanceRadio"
                    value="present"
                  />
                  <label for="" class="text-style-bold">P</label>
                </div>
                <div class="margin-left-2 container-row-flex-start">
                  <input
                    type="radio"
                    name="row<%=session.students.indexOf(element)+1%>"
                    id=""
                    class="attendanceRadio"
                    value="absent"
                    checked
                  />
                  <label for="" class="text-style-bold">A</label>
                </div>
                <div class="margin-left-2 container-row-flex-start">
                  <input
                    type="radio"
                    name="row<%=session.students.indexOf(element)+1%>"
                    id=""
                    value="late"
                    class="attendanceRadio"
                  />
                  <label for="" class="text-style-bold">L</label>
                </div>
                <%}%>
              </div>
            </td>
            <td><input type="text" name="" id="" class="padding-0_2-0_5" /></td>
          </tr>
          <%}%><%}%>
        </tbody>
      </table>
    </div>
  </div>
  <div class="margin-top-1">
    <p class="text-style-bold">Remarks:</p>
    <div class="container-row-flex-start">
      <p><span class="text-style-bold">P</span>:&nbsp;Present</p>
      <p class="margin-left-2">
        <span class="text-style-bold">A</span>:&nbsp;Absent
      </p>
      <p class="margin-left-2">
        <span class="text-style-bold">L</span>:&nbsp;Late
      </p>
    </div>
  </div>
  <div class="container-row-space-between margin-vertical-2">
    <div>
      <label for="">Sorting</label>
      <select name="" id="" class="padding-0_7-1 width-20">
        <option selected disabled>--select sort--</option>
        <option value="1">sort ascending a-z</option>
        <option value="2">sort descending z-a</option>
      </select>
    </div>
    <div>
      <button class="w3-button w3-blue" id="btnSaveAttendanceSession">
        Save
      </button>
    </div>
  </div>
</section>
